<div class="max-w-lg mx-auto p-6">
    <h1 class="text-center text-2xl font-semibold mb-6">Kontaktformular</h1>
    <form
            target="_self"
            action="https://fabform.io/f/Q0-PYYP"
            method="POST"
            aria-label="Kontaktformular"
    >
        <div class="space-y-4">
            <div class="flex flex-col sm:flex-row sm:space-x-4">
                <div class="w-full">
                    <label for="name" class="block mb-1">Name*</label>
                    <input
                            type="text"
                            id="name"
                            name="name"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600"
                            placeholder="Name"
                            required
                    >
                </div>
                <div class="w-full mt-4 sm:mt-0">
                    <label for="email" class="block mb-1">E-Mail-Adresse*</label>
                    <input
                            type="email"
                            id="email"
                            name="email"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600"
                            placeholder="E-Mail-Adresse"
                            required
                    >
                </div>
            </div>
            <div>
                <label for="subject" class="block mb-1">Betreff</label>
                <input
                        type="text"
                        id="subject"
                        name="subject"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600"
                        placeholder="Betreff"
                >
            </div>
            <div>
                <label for="message" class="block mb-1">Ihre Nachricht*</label>
                <textarea
                        id="message"
                        name="message"
                        placeholder="Ihre Nachricht"
                        rows="6"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600"
                        required
                ></textarea>
            </div>
            <button
                    type="submit"
                    class="w-full py-3 mt-4 text-white font-semibold bg-blue-600 rounded-lg shadow-md hover:bg-blue-700"
            >
                Absenden
            </button>
        </div>
    </form>
</div>
